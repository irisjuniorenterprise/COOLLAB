{% extends 'adminDashboard/base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    {{ include('partials/_header.html.twig') }}
    {{ include('partials/_sidebar.html.twig') }}
<div class="container-fluid pt-4 px-4">
<div class="row g-4">
<div class="col-12">
<div class="bg-light rounded h-100 p-4">
<div class="table-responsive">
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">actions</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}"><i class="fa-solid fa-eye"></i></a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                    {{ include('category/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_category_new') }}">Create new <i class="fa-solid fa-plus"></i></a>
</div>
</div>
</div>
</div>
</div>
{% endblock %}
