{% extends 'adminDashboard/base.html.twig' %}
{% block title %}Category index{% endblock %}
{% block body %}
    {{ include('partials/_header.html.twig') }}
    {{ include('partials/_sidebar.html.twig') }}
    <!-- Recent Sales Start -->
    <div class="container-fluid pt-4 px-4">
        <div class="bg-light text-center rounded p-4">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <h6 class="mb-0">Les Categories</h6>
                <a class="btn btn-outline-primary" href="{{ path('app_category_new') }}"><i class="fa-solid fa-plus"></i></a>
            </div>
            <div class="table-responsive">
                <table class="table text-start align-middle table-bordered table-hover mb-0">
                    <thead>
                    <tr class="text-dark">
                        <th scope="col" class="bg-info">Id</th>
                        <th scope="col" class="bg-info">Nom</th>
                        <th scope="col" class="bg-info">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.name }}</td>
                        <td>
                            {# <a class="btn btn-sm btn-primary rounded-circle" href="{{ path('app_category_show', {'id': category.id}) }}"><i class="fa-solid fa-eye"></i></a> #}
                            <a class="btn btn-outline-primary" href="{{ path('app_category_edit', {'id': category.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a class="btn">{{ include('category/_delete_form.html.twig') }}</a>
                        </td>
                    </tr>
                    {% endfor %}
                    {#<tr>
                        <td>01 Jan 2045</td>
                        <td>INV-0123</td>
                        <td>
                            <a class="btn btn-sm btn-primary rounded-circle" href=""><i class="fa-solid fa-eye"></i></a>
                            <a class="btn btn-sm btn-primary rounded-circle" href=""><i class="fa-solid fa-pen-to-square"></i></a>
                        </td>
                    </tr>#}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Recent Sales End -->
{% endblock %}