{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ user.fullName }}</td>
            </tr>
            <tr>
            <tr>
                <th>Address</th>
                <td>{{ user.address }}</td>
            </tr>
            <tr>
                <th>IsBanned</th>
                <td>{{ user.isBanned ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Cv</th>
                <td>{{ user.cv ? user.cv|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Cin</th>
                <td>{{ user.cin }}</td>
            </tr>
            <tr>
                <th>WorkPlace</th>
                <td>{{ user.workPlace ? user.workPlace|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Club</th>
                <td>{{ user.club ? user.club|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ user.score }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index_users') }}">back to list</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
